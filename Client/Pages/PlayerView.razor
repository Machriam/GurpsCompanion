@page "/playerview"
@using GurpsCompanion.Shared.DataModel
@inject HttpClient Http

<div class="row">
    @if (Characters?.Count > 0)
    {
        <div class="col-md-2">
            <label class="col-form-label col-md-12">Select Character</label>
            <div class="d-flex justify-content-end col-md-12">
                <input class="form-control p-1" list="characters" @bind="SelectedCharacterModelName" />
                <button class="btn btn-danger p-1" @onclick="()=>SelectedCharacterModelName=default">&#10007</button>
            </div>
            <datalist id="characters">
                @foreach (var character in Characters)
                {
                    <option>@character.Name</option>
                }
            </datalist>
        </div>
        @if (SelectedCharacterModel != null)
        {
            <div class="col-md-10">
                <PlayerStats SelectedCharacterModel="CharacterEditModel"></PlayerStats>
            </div>
        }
        @if (SelectedCharacterModel != null && CharacterInformation != null)
        {
            <div class="row col-md-12 d-flex text-center">
                <div class="col-md-4 border">
                    <label class="col-form-label-lg">Items</label>
                    <PlayerItems Items="CharacterInformation.Items" SelectedCharacterModel="CharacterInformation.CharacterModel"></PlayerItems>
                </div>
                <div class="col-md-4 border">
                    <label class="col-form-label-lg">Skills</label>
                </div>
                <div class="col-md-4 border">
                    <label class="col-form-label-lg">Advantages</label>
                </div>
            </div>
        }
    }
</div>